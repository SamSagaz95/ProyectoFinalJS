<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#20213E"
    tools:context=".RegistroUsuarios">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="411dp"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/banner" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30px"
                android:gravity="center"
                android:text="INICIAR SESIÓN:"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185px"
                android:text="Usuario:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="Introduce un e-mail..."
                android:inputType="textEmailAddress"
                android:textColor="@color/tabtextcolor"
                android:textColorHint="@color/common_google_signin_btn_text_light_default"
                android:textColorLink="@color/design_default_color_primary" />

            <TextView
                android:id="@+id/txtPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185px"
                android:layout_marginTop="30px"
                android:text="Contraseña:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="275dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:ems="10"
                android:hint="Introduce una contraseña..."
                android:inputType="textPassword"
                android:textColor="@color/tabtextcolor"
                android:textColorHint="@color/common_google_signin_btn_text_light_default"
                android:textColorLink="@color/design_default_color_primary" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50px"
                android:onClick="onClick"
                android:text="Iniciar sesión" />

            <TextView
                android:id="@+id/txtRegistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="Registrar un nuevo usuario"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>